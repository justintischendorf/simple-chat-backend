generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Message {
  id        String   @id @default(uuid()) @db.Uuid
  sender    String
  content   String
  createdAt DateTime @default(now())
}

model User {
  id           String @id @default(uuid()) @db.Uuid
  username     String
  password     String
  passwordHash String
}
